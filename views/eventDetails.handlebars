{{#event}}
<div>
	<h3>Event Details</h3>
	<hr/>
	<div class="eventParameter">
	<p><strong>Title:</strong> 
	{{title}}</p>
	</div>

	<div class="eventParameter">
	<p><strong>Date: </strong> 
	{{month}}/{{day}}/{{year}}</p>
	</div>

	<div class="eventParameter">
	<p><strong>Location:</strong> 
	{{location}}</p>
	</div>

	<div class="eventParameter">
	<p><strong>Description: </strong></p>
	<div class="eventDescription">{{description}}</div>
	</div>

	<p>
		<button type="submit" id="myBtn" class="btn red"><i class="fa fa-trash" style="padding-right: 7px;"></i> Delete</button> 

		<button type="submit" id="myBtn" class="btn green"><i class="fa fa-pencil" style="padding-right: 7px;"></i> Edit</button>
	</p>
</div>
{{/event}}