{{#event}}
<div>
	<h3>Event Details</h3>
	<hr/>
	<div class="eventParameter">
	<p><strong>Title:</strong> 
	{{title}}</p>
	</div>

	<div class="eventParameter">
	<p><strong>Date: </strong> 
	{{add month 1}}/{{day}}/{{year}}</p>
	</div>

	<div class="eventParameter">
	<p><strong>Location:</strong> 
	{{location}}</p>
	</div>

	<div class="eventParameter">
	<p><strong>Description: </strong></p>
	<div class="eventDescription">{{description}}</div>
	</div>

	<p>
		<button onclick='deleteEvent("{{this._id}}","{{this.title}}");' class="btn red"><i class="fa fa-trash" style="padding-right: 7px;"></i> Delete</button> 

		<a href="/editEventForm/{{this._id}}" class="btn green"><i class="fa fa-pencil" style="padding-right: 7px;"></i> Edit</a>
	</p>
</div>
{{/event}}